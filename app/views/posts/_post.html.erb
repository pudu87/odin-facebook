<div>
  <%= link_to "#{post.user.full_name}", user_path(post.user) %><br>
  <%= distance_of_time_in_words(post.created_at, Time.now) %> ago<br>

  <% if post.photo.attached? %>
    <%= image_tag post.photo, width: "150" %><br>
  <% end %>

  <% if post.content %>
    <%= post.content %><br>
  <% end %>

  <% if current_user == post.user %>
    <%= link_to ">>Edit", edit_post_path(post) %>
    <%= link_to ">>Delete", post_path(post), method: :delete, data: {confirm: "Remove this post?"} %>
  <% end %>

  <%= render partial: 'posts/like', locals: {post: post} %>

  <h4>Comments</h4>
  <%= render partial: 'posts/comment', collection: post.comments %>
  <%= render partial: 'comments/form', locals: {post: post}%>
</div>