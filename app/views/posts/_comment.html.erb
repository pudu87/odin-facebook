<div>
  <p>Comment by <%= comment.user.full_name %></p>
  <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago<br>

  <p><%= comment.content %></p>
  <% if comment.user == current_user %>
    <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>