<div class="comment">
  <div id="name-options">
    <%= link_to "#{comment.user.full_name}", user_path(comment.user), class: "comment-author" %>
    <div class="edit-delete">
      <% if comment.user == current_user %>
        <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" %>
      <% end %>
    </div>
  </div>
  
  <div class="time">
    <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
  </div>

  <p class="content"><%= comment.content %></p>
</div>