<h2>Search here for your friends. Or invite new ones...</h2>

<ul><% @users.each do |user| %>
  <li><%= link_to user.full_name, user_path(user) %>
    <% if user_signed_in? %>
      <% if current_user.possible_friends.include?(user) %>
        <br><%= link_to ">> Send friend request", friendships_path(friend_id: user.id), method: :post %>
      <% end %>
      <% if current_user.pending_friends.include?(user) %>
        <br><%= link_to ">> Accept friend request", friendship_path(user, friend_id: user.id), method: :put %>
      <% end %>
      <% if current_user.confirmed_friends.include?(user) %>
        <br><%= link_to ">> Remove as friend", friendship_path(user, friend_id: user.id), method: :delete, data: {confirm: "Remove this friend?"} %>
      <% end %>
    <% end %>
  </li>
  <% end %>
</ul>

